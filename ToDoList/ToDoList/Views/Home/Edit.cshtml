@model TaskList
@{
    ViewData["Title"] = "EditTask";
}

<div class="card-hover-shadow-2x card p-2">
<h1>Edit Task</h1>

<form asp-action="Edit" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <input hidden asp-asp-for="ImageUrl" />
    <div class="form-group mt-2">
        <label asp-for="Title" class="form-label h6"></label>
        <input asp-for="Title" class="form-control" placeholder="Title" aria-label="Recipient's title" aria-describedby="button-addon2">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>



    <div class="form-group mt-2">
        <label asp-for="CategoryId" class="form-label mb-1">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>



    <div class="form-group mt-2">
        <label class="form-label h6">Сompletions: </label>
        <select name="compls" id="compls" asp-items="ViewBag.Сompletions" multiple class="form-control">
        </select>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Description" class="form-label h6"></label>
        <textarea asp-for="Description" rows="5" id="description" name="Description" class="form-control" placeholder="Recipient's title" aria-label="Recipient's title" aria-describedby="button-addon2"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <img src="@Model.ImageUrl" height="200" />

    <div class="input-group mt-3">
        <input name="ImageUrl" type="file" class="form-control" id="ImageUrl">
        <label class="input-group-text" for="ImageUrl">Upload</label>
    </div>


    <button class="btn btn-success mt-2 w-25">Edit</button>
</form>

</div>





@section Scripts
    {

    <script>
        $("#compls").chosen();
    </script>
    <script src="https://<hostname.tld>/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdn.tiny.cloud/1/g9zqwp7tm78tvvxftg4se9v6vhuujkn4dh5xzh6kfr7kxcg6/tinymce/6/plugins.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
    <script src="https://cdn.tiny.cloud/1/g9zqwp7tm78tvvxftg4se9v6vhuujkn4dh5xzh6kfr7kxcg6/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
    <partial name="_ValidationScriptsPartial"></partial>
}
